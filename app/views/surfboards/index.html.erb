<div ng-app="app">
  <div ng-controller="surfboardCtrl" ng-init="setup()">
    <ul>
      <li ng-repeat="error in errors">{{ error }}</li>
    </ul>
    <div> 
      Name<input ng-model="name">
      Feet<input ng-model="feet">
      Inches<input ng-model="inches">
      Color<input ng-model="color">
      <button ng-click="addSurfboard(name,feet, inches, color)">Add Surfboard</button>
    </div>
     
      <datalist id="names">
        <option ng-repeat="surfboard in surfboards">{{ surfboard.name }}</option>
      </datalist>
  
    <table>
      <tr>
        <th ng-click="toggleOrder('name')">Name</th>
        <th ng-click="toggleOrder('feet')">Feet</th>
        <th ng-click="toggleOrder('inches')">Inches</th>
        <th ng-click="toggleOrder('Color')">Color</th>
        <th>Delete Board</th>
      </tr>


      Name<input ng-model = "nameFilter" list="names">
      Feet<input ng-model = "feetFilter">
      <tr ng-repeat="surfboard in surfboards | filter: {name: nameFilter, feet: feetFilter} | orderBy: orderAttribute:purplehippo">    
        <td>{{surfboard.name}}</td>
        <td>{{surfboard.feet}}</td>
        <td>{{surfboard.inches}}</td>
        <td>{{surfboard.color}}</td>
        <td><button ng-click="deleteSurfboard(surfboard)">Delete Me!</button> </td>
      </tr>
    </table>


  </div>
</div>